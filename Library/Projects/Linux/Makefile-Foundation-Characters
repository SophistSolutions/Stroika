include ../../Configuration.mk
include	../../SharedBuildRules.mk
include	../../SharedMakeVariables.mk

RelPathToStroikaDevRoot	=	../../../../../
SrcDir					=	$(RelPathToStroikaDevRoot)Library/Sources/Stroika/Foundation/Characters

vpath %cpp $(SrcDir)

Objs	=	\
	$(ObjDir)Character.o\
	$(ObjDir)CodePage.o\
	$(ObjDir)Float2String.o\
	$(ObjDir)Format.o\
	$(ObjDir)SDKChar.o\
	$(ObjDir)SDKString.o\
	$(ObjDir)String.o\
	$(ObjDir)String2Float.o\
	$(ObjDir)String2Int.o\
	$(ObjDir)RegularExpression.o\
	$(ObjDir)Tokenize.o\

SubDirs	=	\
	Concrete \
	CString \

.PHONY:	$(SubDirs)

all:	$(Objs) $(SubDirs)


CONCRETE_OBJS := $(addprefix "Concrete/", $(shell $(MAKE) --directory Concrete -s list-objs))
CSTRING_OBJS := $(addprefix "CString/", $(shell $(MAKE) --directory CString -s list-objs))


list-objs::
	@echo $(CONCRETE_OBJS) $(CSTRING_OBJS)


Concrete:
	@$(MAKE) --directory Concrete -s

CString:
	@$(MAKE) --directory CString -s
