include ../../Configuration.mk
include	../../SharedBuildRules.mk
include	../../SharedMakeVariables.mk

RelPathToStroikaDevRoot	=	../../../../../../
SrcDir					=	$(RelPathToStroikaDevRoot)Library/Sources/Stroika/Foundation/Characters

.PHONY:	CString

vpath %cpp $(SrcDir)

Objs	=	\
	$(ObjDir)CodePage.o\
	$(ObjDir)Format.o\
	$(ObjDir)String.o\
	$(ObjDir)StringUtils.o\
	$(ObjDir)RegularExpression.o\
	$(ObjDir)Tokenize.o\

SubDirs	=	\
	CString \

all:	$(Objs) $(SubDirs)


CSTRING_OBJS := $(addprefix "./CString/", $(shell cd CString; make -s list-objs))


list-objs::
	@echo $(CSTRING_OBJS)


CString:
	(cd CString; make -s)
