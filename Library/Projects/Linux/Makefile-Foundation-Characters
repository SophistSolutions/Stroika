include ../../Configuration.mk
include	../../SharedBuildRules.mk
include	../../SharedMakeVariables.mk

RelPathToStroikaDevRoot	=	../../../../../../
SrcDir					=	$(RelPathToStroikaDevRoot)Library/Sources/Stroika/Foundation/Characters

.PHONY:	Concrete CString

vpath %cpp $(SrcDir)

Objs	=	\
	$(ObjDir)CodePage.o\
	$(ObjDir)Format.o\
	$(ObjDir)String.o\
	$(ObjDir)StringUtils.o\
	$(ObjDir)RegularExpression.o\
	$(ObjDir)Tokenize.o\

SubDirs	=	\
	Concrete \
	CString \

all:	$(Objs) $(SubDirs)


CONCRETE_OBJS := $(addprefix "./Concrete/", $(shell cd Concrete; $(MAKE) -s list-objs))
CSTRING_OBJS := $(addprefix "./CString/", $(shell cd CString; $(MAKE) -s list-objs))


list-objs::
	@echo $(CONCRETE_OBJS) $(CSTRING_OBJS)


Concrete:
	(cd Concrete; $(MAKE) -s)

CString:
	(cd CString; $(MAKE) -s)
