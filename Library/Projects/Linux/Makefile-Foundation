include ../Configuration.mk
include	../SharedMakeVariables.mk
include	../SharedBuildRules.mk

RelPathToDevRoot		=	../../../../../
SrcDir                          =       $(RelPathToDevRoot)Library/Sources/Stroika/Foundation/


VPATH = $(SrcDir) $(LibDir)

SubDirs=	\
	Characters		\
	Configuration		\
	Containers		\
	Cryptography		\
	Database		\
	DataExchangeFormat	\
	Debug			\
	Execution		\
	IO			\
	Linguistics		\
	Math			\
	Memory			\
	Streams			\
	Time			\



all-objs:
	@for i in $(SubDirs);\
	do\
	    (cd $$i; make -s all)\
	done


$(StroikaFoundationLib):	all-objs
	@mkdir -p $(LibDir)
	@echo Creating $(StroikaFoundationLib)...
	@rm -f $(StroikaFoundationLib)
	@for i in $(SubDirs);\
	do\
	    (cd $$i; for oo in `make -s list-objs`; do (cd ..; ar cq $(StroikaFoundationLib) $$i/$$oo); done )\
	done
	@ranlib $(StroikaFoundationLib)


all:	$(StroikaFoundationLib)


clean::
	@for i in $(SubDirs);\
	do\
	    (cd $$i; make -s clean;)\
	done

clobber::
	@rm -f $(StroikaFoundationLib)


Build:	all


