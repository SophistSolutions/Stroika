include ../../../Configuration.mk
include	../../../SharedMakeVariables.mk
include	../../../SharedBuildRules.mk


RelPathToStroikaDevRoot		=	../../../../../../
SrcDir						=	$(RelPathToStroikaDevRoot)Library/Sources/Stroika/Foundation/Cryptography/Encoding/

.PHONY:			Algorithms


SubDirs	=	\
	Algorithms	\

vpath %cpp $(SrcDir)

Objs	=	\
	$(ObjDir)AES.o\
	$(ObjDir)Base64.o\
	$(ObjDir)OpenSSLCryptoStream.o\
	$(ObjDir)RC4.o\

all:	$(Objs)  $(SubDirs)


Algorithms_OBJS := $(addprefix "./Algorithms/", $(shell cd Algorithms; make -s list-objs))


list-objs::
	@echo $(Objs) $(Algorithms_OBJS)

Algorithms:
	(cd Algorithms; make -s)
