include ../../Configuration.mk
include	../../SharedBuildRules.mk
include	../../SharedMakeVariables.mk

RelPathToStroikaDevRoot		=	../../../../../../
SrcDir						=       $(RelPathToStroikaDevRoot)Library/Sources/Stroika/Frameworks/UPnP/

.PHONY:			SSDP

vpath %cpp $(SrcDir)

SubDirs	=	\
	SSDP	\

Objs	=	\
	$(ObjDir)Device.o\

all:	$(Objs) $(SubDirs)

SSDP_OBJS := $(shell cd SSDP; $(MAKE) -s list-objs)
SSDP_OBJS := $(addprefix "./SSDP/", $(SSDP_OBJS))

list-objs::
	@echo $(SSDP_OBJS)

SSDP:
	(cd SSDP; $(MAKE))
