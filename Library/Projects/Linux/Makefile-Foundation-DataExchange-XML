include ../../../Configuration.mk
include	../../../SharedBuildRules.mk
include	../../../SharedMakeVariables.mk

RelPathToStroikaDevRoot		=		../../../../../../
SrcDir						=		$(RelPathToStroikaDevRoot)Library/Sources/Stroika/Foundation/DataExchange/XML/

vpath %cpp $(SrcDir)

Objs	=	\
	$(ObjDir)Namespace.o\
	$(ObjDir)Reader.o\
	$(ObjDir)SAXObjectReader.o\
	$(ObjDir)SAXReader.o\
	$(ObjDir)SerializationConfiguration.o\
	$(ObjDir)Writer.o\
	$(ObjDir)WriterUtils.o\

all:	$(Objs)


$(ObjDir)SAXReader.o:	$(SrcDir)SAXReader.cpp
	#Override the build for this one .o file to add an extra #include path
	@echo "Compiling $<"
	@$(CPlusPlus) $(CFLAGS) -c -I$(RelPathToStroikaDevRoot)ThirdPartyLibs/Xerces/CURRENT/src/ $< -o $@

