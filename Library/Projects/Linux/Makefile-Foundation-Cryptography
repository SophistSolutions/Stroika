include ../../Configuration.mk
include	../../SharedMakeVariables.mk
include	../../SharedBuildRules.mk


RelPathToStroikaDevRoot		=	../../../../../
SrcDir						=	$(RelPathToStroikaDevRoot)Library/Sources/Stroika/Foundation/Cryptography/


SubDirs	=	\
	Digest		\
	Encoding	\
	SSL			\

.PHONY:			$(SubDirs)


vpath %cpp $(SrcDir)

Objs	=	\
	$(ObjDir)Hash.o\
	$(ObjDir)Format.o\

all:	$(Objs) $(SubDirs)


Digest_OBJS := $(addprefix "Digest/", $(shell $(MAKE) --directory Digest -s list-objs))
Encoding_OBJS := $(addprefix "Encoding/", $(shell $(MAKE) --directory Encoding -s list-objs))
SSL_OBJS := $(addprefix "SSL/", $(shell $(MAKE) --directory SSL -s list-objs))


list-objs::
	@echo $(Objs) $(Digest_OBJS) $(Encoding_OBJS) $(SSL_OBJS)

Digest:
	@$(MAKE) --directory Digest -s

Encoding:
	@$(MAKE) --directory Encoding -s

SSL:
	@$(MAKE) --directory SSL -s
