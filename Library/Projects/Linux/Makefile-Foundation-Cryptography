include ../../Configuration.mk
include	../../SharedMakeVariables.mk
include	../../SharedBuildRules.mk


RelPathToStroikaDevRoot		=	../../../../../../
SrcDir						=	$(RelPathToStroikaDevRoot)Library/Sources/Stroika/Foundation/Cryptography/

.PHONY:			Hash SSL


SubDirs	=	\
	Hash	\
	SSL		\


vpath %cpp $(SrcDir)

Objs	=	\
	$(ObjDir)AES.o\
	$(ObjDir)Base64.o\
	$(ObjDir)OpenSSLCryptoStream.o\
	$(ObjDir)MD5.o\
	$(ObjDir)RC4.o\

all:	$(Objs) $(SubDirs)


Hash_OBJS := $(addprefix "./Hash/", $(shell cd Hash; make -s list-objs))
SSL_OBJS := $(addprefix "./SSL/", $(shell cd SSL; make -s list-objs))


list-objs::
	@echo $(Hash_OBJS) $(SSL_OBJS)

Hash:
	(cd Hash; make -s)

SSL:
	(cd SSL; make -s)
