include	../../../Configuration.mk
include	../../../SharedBuildRules.mk
include	../../../SharedMakeVariables.mk

SrcDir						=	$(StroikaRoot)Library/Sources/Stroika/Foundation/IO/Network/

SubDirs	=		\
	HTTP		\
	SOAP		\
	Transfer	\

.PHONY:			$(SubDirs)

vpath %cpp $(SrcDir)

Objs	=	\
	$(ObjDir)DNS.o\
	$(ObjDir)IOWaitDispatcher.o\
	$(ObjDir)Interface.o\
	$(ObjDir)InternetAddress.o\
	$(ObjDir)LinkMonitor.o\
	$(ObjDir)Listener.o\
	$(ObjDir)Socket.o\
	$(ObjDir)SocketAddress.o\
	$(ObjDir)SocketStream.o\
	$(ObjDir)URL.o\

all:	$(Objs) $(SubDirs)


HTTP_OBJS		:= $(addprefix "HTTP/", $(shell $(MAKE) --directory HTTP -s list-objs))
SOAP_OBJS		:= $(addprefix "SOAP/", $(shell $(MAKE) --directory SOAP -s list-objs))
Transfer_OBJS	:= $(addprefix "Transfer/", $(shell $(MAKE) --directory Transfer -s list-objs))


list-objs::
	@echo $(HTTP_OBJS) $(SOAP_OBJS) $(Transfer_OBJS)


HTTP:
	@$(MAKE) --directory HTTP -s

SOAP:
	@$(MAKE) --directory SOAP -s

Transfer:
	@$(MAKE) --directory Transfer -s

