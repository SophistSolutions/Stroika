include ../../Configuration.mk
include	../../SharedMakeVariables.mk
include	../../SharedBuildRules.mk

SrcDir						=	$(StroikaRoot)Library/Sources/Stroika/Foundation/Streams/

vpath %cpp $(SrcDir)

SubDirs	=	\
	iostream	\

.PHONY:			$(SubDirs)


Objs	=	\
	$(ObjDir)InputStream.o\
	$(ObjDir)OutputStream.o\
	$(ObjDir)MemoryStream.o\
	$(ObjDir)TextReader.o\
	$(ObjDir)TextWriter.o\

all:	$(Objs)  $(SubDirs)


iostream_OBJS := $(addprefix "iostream/", $(shell $(MAKE) --directory iostream -s list-objs))

list-objs::
	@echo $(iostream_OBJS)

iostream:
	@$(MAKE) --directory iostream -s
