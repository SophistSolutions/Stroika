include ../../Configuration.mk
include	../../SharedBuildRules.mk
include	../../SharedMakeVariables.mk

RelPathToStroikaDevRoot		=	../../../../../
SrcDir                          =       $(RelPathToStroikaDevRoot)Library/Sources/Stroika/Foundation/DataExchange/

vpath %cpp $(SrcDir)

Objs	=	\
	$(ObjDir)Atom.o\
	$(ObjDir)ArchiveReader.o\
	$(ObjDir)BadFormatException.o\
	$(ObjDir)CheckedConverter.o\
	$(ObjDir)InternetMediaType.o\
	$(ObjDir)ObjectVariantMapper.o\
	$(ObjDir)OptionsFile.o\
	$(ObjDir)StructuredDataStreamConsumer.o\
	$(ObjDir)VariantReader.o\
	$(ObjDir)VariantValue.o\
	$(ObjDir)VariantWriter.o\

SubDirs	=	\
	7z \
	CharacterDelimitedLines \
	INI \
	JSON \
	XML \
	Zip \

.PHONY:				$(SubDirs)


all:	$(Objs) $(SubDirs)


SevenZ_OBJS := $(addprefix "7z/", $(shell $(MAKE) --directory 7z -s list-objs))
CharacterDelimitedLines_OBJS := $(addprefix "CharacterDelimitedLines/", $(shell $(MAKE) --directory CharacterDelimitedLines -s list-objs))
INI_OBJS := $(addprefix "INI/", $(shell $(MAKE) --directory INI -s list-objs))
JSON_OBJS := $(addprefix "JSON/", $(shell $(MAKE) --directory JSON -s list-objs))
XML_OBJS := $(addprefix "XML/", $(shell $(MAKE) --directory XML -s list-objs))
Zip_OBJS := $(addprefix "Zip/", $(shell $(MAKE) --directory Zip -s list-objs))


list-objs::
	@echo $(SevenZ_OBJS) $(CharacterDelimitedLines_OBJS) $(INI_OBJS) $(JSON_OBJS) $(XML_OBJS) $(Zip_OBJS)


7z INI CharacterDelimitedLines JSON XML Zip:
	@$(MAKE) --directory $@ -s
