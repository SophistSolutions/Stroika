include ../../../Configuration.mk
include	../../../SharedBuildRules.mk
include	../../../SharedMakeVariables.mk

SrcDir                          =       $(StroikaRoot)Library/Sources/Stroika/Foundation/DataExchange/Archive/

vpath %cpp $(SrcDir)

Objs	=	\
	$(ObjDir)Reader.o\

SubDirs	=	\
	7z \
	Zip \

.PHONY:				$(SubDirs)


all:	$(Objs) $(SubDirs)


SevenZ_OBJS := $(addprefix "7z/", $(shell $(MAKE) --directory 7z -s list-objs))
Zip_OBJS := $(addprefix "Zip/", $(shell $(MAKE) --directory Zip -s list-objs))


list-objs::
	@echo $(SevenZ_OBJS) $(Zip_OBJS)


$(SubDirs):
	@$(MAKE) --directory $@ -s
