include ../../Configuration.mk
include	../../SharedBuildRules.mk
include	../../SharedMakeVariables.mk

SrcDir						=       $(StroikaRoot)Library/Sources/Stroika/Frameworks/UPnP/

vpath %cpp $(SrcDir)

SubDirs	=	\
	SSDP	\

.PHONY:			$(SubDirs)

Objs	=	\
	$(ObjDir)Device.o\
	$(ObjDir)DeviceDescription.o\

all:	$(Objs) $(SubDirs)

SSDP_OBJS := $(addprefix "SSDP/", $(shell $(MAKE) --directory SSDP -s list-objs))

list-objs::
	@echo $(SSDP_OBJS)

SSDP:
	@$(MAKE) --directory SSDP -s
